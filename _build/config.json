    "resources": [{
      "pagetitle": "Quill",
      "alias": "quill",
      "template": "Quill",
      "class_key": "SelectionContainer",
      "isfolder": 1,
      "published": 1,
      "richtext": 0,
      "menutitle": "Quill",
      "file": "quill.content.html.tpl",
      "tvs": [{
        "name": "qllPageLayout",
        "value": "[[$qllFullLayout]]"
      }]
    },{
      "pagetitle": "Blog",
      "alias": "blog",
      "parent": "Quill",
      "template": "Quill",
      "class_key": "CollectionContainer",
      "isfolder": 1,
      "published": 1,
      "richtext": 0,
      "menutitle": "Quill Blog",
      "hide_children_in_tree": 1,
