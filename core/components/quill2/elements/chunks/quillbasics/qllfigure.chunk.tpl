<figure class="figure">
  <img data-src="[[+img]]" width="[[+width:default=`824`]]" class="img-fluid" alt="[[+caption]]">
  <figcaption class="figure-caption post-photo-credit[[+center-caption:is=`1`:then=` text-xs-center`]]">
    [[+caption]]
    <span class="pull-md-right">[[+credits]]</span>
  </figcaption>
</figure>
